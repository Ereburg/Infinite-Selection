<body>

    <section class="container-center mx-auto">
        <p class="infinite-text lost-text">
            Please enter your email address. You will receive a link to create a new password via email.
        </p>

        <form class="infinite-form lost-form infinite-form-validation" novalidate>
            <div class="form-group">
                <label class="label" for="exampleInputEmail">Email Address</label>
                <input type="email" class="form-control " id="exampleInputEmail" aria-describedby="emailHelp" required>
                <div class="invalid-feedback">
                    Please enter a valid Email address.
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <button type="submit" class="infinite-button login-button lost-button">Get New Password</button>
            <a class="form-text align-self-start" href='login.hbs'>Log In</a>
            <a class="form-text align-self-start" href='home.hbs'>&#8592; Back to Infinite Selection</a>
        </form>

    </section>

