<header class="page-content__header header-main js-header" id="topPage">
  <div class="container">
    <div class="header-main__content">
      <div class="header-main__toggle toggle-menu">
        <button class="toggle-menu__btn js-mobile-menu" type="button">
          <img src="../assets/images/logo/mobile-menu-icon.svg" class="toggle-menu__open" alt="Mobile menu icon" />
          <img src="../assets/images/logo/mobile-menu-icon-close.svg" class="toggle-menu__close" alt="Mobile menu
          icon" />
        </button>
      </div>
      <div class="header-main__brand">
        {{#ifCond page "home"}}
          <span class="page-logo">
            <img src="../assets/images/logo/logo-black.svg" alt="Our logo">
          </span>
        {{else}}
          <a class="page-logo" href="home.html">
            <img src="../assets/images/logo/logo-black.svg" alt="Our logo">
          </a>
        {{/ifCond}}
      </div>
      <nav class="header-main__nav">
        <ul class="header-main__nav-list">
          {{#each nav-menu}}
            {{>blocks/shared/menu-link}}
          {{/each}}
        </ul>
      </nav>
      <div class="header-main__actions">
        <div class="header-main__actions-item">
          <a class="btn-inline" href="account--login.html">Login</a>
        </div>
        <div class="header-main__actions-item header-search js-header-search">
          <div class="header-search__opened js-header-search__dropdown">
            <div class="header-search__inner">
              <form>
                <div class="header-search__header">
                  <div class="header-search__field">
                    <label class="header-search__label">
                      <input class="header-search__input search-input js-header-search__input" type="search" name="q" autocomplete="off" placeholder="Search..">
                    </label>
                  </div>
                  <button class="header-search__close js-header-search__close" type="button"><span class="icon-close"></span></button>
                </div>
                <div class="header-search__results js-header-search__results">
                  <ul class="header-search__results-list">
                    <li class="header-search__results-item"><a class="header-search__results-link" href="product-single.html">Adidas 350 Clay</a></li>
                    <li class="header-search__results-item"><a class="header-search__results-link" href="how-we-clean.html">How to clean</a></li>
                    <li class="header-search__results-item"><a class="header-search__results-link" href="ways-to-rent.html">Ways to rent</a></li>
                    <li class="header-search__results-item"><a class="header-search__results-link" href="account--create.html">Create account</a></li>
                    <li class="header-search__results-item"><a class="header-search__results-link" href="privacy-policy.html">Privacy policy</a></li>
                    <li class="header-search__results-item"><a class="header-search__results-link" href="terms-of-service.html">Terms of service</a></li>
                  </ul>
                </div>
              </form>
            </div>
          </div>
          <a href="#" class="header-search__btn btn-icon js-header-search__open">
            <svg aria-hidden="true" focusable="false" role="img" width="16" height="16" viewBox="0 0 20 20"
                 fill="none" xmlns="http://www.w3.org/2000/svg">
              <path
                d="M19.8633 18.3164L15.1211 13.5742C15.0313 13.4844 14.9141 13.4375 14.7891 13.4375H14.2734C15.5039 12.0117 16.25 10.1562 16.25 8.125C16.25 3.63672 12.6133 0 8.125 0C3.63672 0 0 3.63672 0 8.125C0 12.6133 3.63672 16.25 8.125 16.25C10.1562 16.25 12.0117 15.5039 13.4375 14.2734V14.7891C13.4375 14.9141 13.4883 15.0313 13.5742 15.1211L18.3164 19.8633C18.5 20.0469 18.7969 20.0469 18.9805 19.8633L19.8633 18.9805C20.0469 18.7969 20.0469 18.5 19.8633 18.3164ZM8.125 14.375C4.67187 14.375 1.875 11.5781 1.875 8.125C1.875 4.67187 4.67187 1.875 8.125 1.875C11.5781 1.875 14.375 4.67187 14.375 8.125C14.375 11.5781 11.5781 14.375 8.125 14.375Z"
                fill="currentColor" />
            </svg>
          </a>
        </div>
        <div class="header-main__actions-item">
          <button type="button" class="btn-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="21" height="17" viewBox="0 0 21.462 17.951"
                 aria-hidden="true" focusable="false" role="img">
              <path
                fill="currentColor"
                d="M21.462 5.691h-3.176L12.355 0l-.98 1.021 4.867 4.67H5.2L10 1.017 9.013.003l-5.84 5.688H0v1.415h.855l1.365 8.78a2.488 2.488 0 0 0 2.41 2.065h12.111a2.507 2.507 0 0 0 2.422-2.057l1.44-8.788h.86zm-3.7 9.974a1.1 1.1 0 0 1-1.025.871H4.629a1.087 1.087 0 0 1-1.012-.867l-1.33-8.563h16.882z" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>
